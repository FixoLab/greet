{
  "name": "greet",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass assets/sass/main.scss assets/css/style.css -w",
    "video:sass": "node-sass assets/sass/videomodal.scss assets/css/videomodal.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass video:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "prepare": "npx crlf --set=LF node_modules/.bin/jira-prepare-commit-msg",
    "rtl": "rtlcss assets/css/videomodal.css assets/css/videomodal.rtl.css"
  },
  "author": "fixolab",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "concat": "^1.0.3",
    "live-server": "^1.1.0",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0"
  },
  "dependencies": {
    "rtlcss": "^4.0.0",
    "urix": "^0.1.0",
    "uuid": "^8.3.2"
  }
}
